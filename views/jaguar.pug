extends layout
block content
    div(class="container-fluid")
        h1= title
    - let results=[{jaguar_color:"brown",jaguar_breed:"Flemish jaguar",jaguar_price:200000},{jaguar_color:"white",jaguar_breed:"Angora jaguar",jaguar_price:5600},{jaguar_color:"black",jaguar_breed:"black jag",jaguar_price:50000}]
        div(class="row")
            each form,item in results
                div(class = "col-sm-2 bg-primary" onclick=`buy(${item})`) #{form.jaguar_color}             
                div(class = "col-sm-2 bg-primary" onclick=`buy(${item})`) #{form.jaguar_breed}                
                div(class = "col-sm-2 bg-primary" onclick=`buy(${item})`) #{form.jaguar_price}
                hr
    
    br
    h5= 'buy'

    div(class="container-fluid")
      each jaguar,index in results
        div(class="row", onclick=`buy(${index})`)
          div(class="col-sm-2") <br>jaguar #{index}: #{jaguar.jaguar_color} breed:#{jaguar.jaguar_breed} price:#{jaguar.jaguar_price}

    script.
        function buy(itemNo)
        {
            alert(`You purchased Item ${itemNo+1}`)
        }